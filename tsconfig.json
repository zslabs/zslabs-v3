{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~data/*": ["data/*"],
      "~fonts/*": ["app/fonts/*"],
      "~components/*": ["components/*"],
      "~helpers/*": ["helpers/*"],
      "~hooks/*": ["hooks/*"],
      "~icons/*": ["icons/*"],
      "~layouts/*": ["layouts/*"],
      "~lib/*": ["lib/*"],
      "~media/*": ["media/*"],
      "~styles/*": ["styles/*"],
      "~types/*": ["types/*"],
      "~css/*": ["./styled-system/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated",
    ".next/types/**/*.ts"
  ],
  "types": ["types"],
  "exclude": ["node_modules"]
}
